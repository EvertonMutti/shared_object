# EditorConfig is awesome: https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4

[*.c]
indent_size = 4
curly_brace_style = linux

[*.h]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.sh]
indent_size = 4

